<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Catalog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/show.css">
</head>
<body>

  <!-- Sidebar -->
  <%- include('sidebar') %>

  <!-- Content -->
  <div class="content">
    <h3 class="mb-4">ðŸ“š Book Catalog</h3>

    <div class="table-container">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>
              <div class="header-content">
                Cover
                <span class="icon-badge icon-cover"><i class="bi bi-image"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Title
                <span class="icon-badge icon-title"><i class="bi bi-book"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Author
                <span class="icon-badge icon-author"><i class="bi bi-person"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                ISBN
                <span class="icon-badge icon-isbn"><i class="bi bi-upc-scan"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Genre
                <span class="icon-badge icon-genre"><i class="bi bi-tags"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Total
                <span class="icon-badge icon-total"><i class="bi bi-123"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Description
                <span class="icon-badge icon-desc"><i class="bi bi-text-paragraph"></i></span>
                <span class="sort-icons">
                  <i class="bi bi-caret-up-fill"></i>
                  <i class="bi bi-caret-down-fill"></i>
                </span>
              </div>
            </th>
            <th>
              <div class="header-content">
                Actions
                <span class="icon-badge icon-actions"><i class="bi bi-gear"></i></span>
              </div>
            </th>
          </tr>
        </thead>

        <tbody>
          <% allTodo.map((val) => { %>
          <tr>
            <td><img src="/uploads/<%= val.profile %>" height="100px" alt=""></td>
            <td><%= val.bookName %></td>
            <td><%= val.name %></td>
            <td><%= val.isbn %></td>
            <td><%= val.gender %></td>
            <td><%= val.totalBook %></td>
            <td><%= val.description %></td>
            <td>
              <a href="/viewPage/<%= val.id %>" class="action-btn view-btn"><i class="bi bi-eye"></i></a>
              <a href="/edit/<%= val.id %>" class="action-btn edit-btn"><i class="bi bi-pencil"></i></a>
              <a href="/deleteTodo/<%= val.id %>" class="action-btn delete-btn"><i class="bi bi-trash"></i></a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-end mt-3">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
          </li>
          <li class="page-item active"><a class="page-link" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#">Next</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>

</body>
</html>
