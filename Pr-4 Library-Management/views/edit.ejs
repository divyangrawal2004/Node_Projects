<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Book</title>
    <link rel="stylesheet" href="/css/form.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  </head>
  <body>
    <div class="form-container">
        <%- include('sidebar') %>
      <h1>Edit Book</h1>
      <form action="/updateTodo/<%= editData.id %>" method="post" enctype="multipart/form-data">
        <!-- Row 1 -->
        <div class="form-row">
        <div class="form-group file-input-preview">
     <label>Book Image</label>
       <input type="file" name="profile" />
          <% if(editData.profile) { %>
          <img src="/uploads/<%= editData.profile %>" alt="Preview">
         <% } %>
     </div>
          <div class="form-group">
            <label>Book Name</label>
            <input type="text" name="bookName" placeholder="Enter Book Name" value="<%= editData.bookName %>" />
          </div>
        </div>

        <!-- Row 2 -->
        <div class="form-row">
          <div class="form-group">
            <label>Author Name</label>
            <input type="text" name="name" placeholder="Enter Author Name" value="<%= editData.name %>" />
          </div>
          <div class="form-group">
            <label>ISBN Number</label>
            <input type="text" name="isbn" placeholder="Enter ISBN"  value="<%= editData.isbn %>"/>
          </div>
        </div>

        <!-- Checkbox full row -->
        <div class="form-group">
          <label>Genre</label>
          <div class="checkbox-group">
            <label
              ><input type="checkbox" name="gender" value="Dystopian" <% if(editData.gender.includes('Dystopian')) { %>} checked <% } %> />
              Dystopian</label
            >
            <label
              ><input type="checkbox" name="gender" value="Historical" <% if(editData.gender.includes('Historical')) { %>} checked <% } %> />
              Historical</label
            >
            <label
              ><input type="checkbox" name="gender" value="Horror" <% if(editData.gender.includes('Horror')) { %>} checked <% } %> />
              Horror</label
            >
            <label
              ><input type="checkbox" name="gender" value="Mystery" <% if(editData.gender.includes('Mystery')) { %>} checked <% } %> />
              Mystery</label
            >
            <label
              ><input type="checkbox" name="gender" value="Romance" <% if(editData.gender.includes('Romance')) { %>} checked <% } %> />
              Romance</label
            >
          </div>
        </div>

        <!-- Row 3 -->
        <div class="form-row last-row">
          <div class="form-group">
            <label>Total Book</label>
            <input type="text" name="totalBook" placeholder="Enter Total Book" value="<%= editData.totalBook %>" />
          </div>
          <div class="form-group">
            <label>Book Description</label>
            <textarea name="description"> <%= editData.description %></textarea>
          </div>
        </div>

        <!-- Submit button center -->
        <div class="form-actions">
          <input type="submit" value="Submit" />
        </div>
      </form>
    </div>
  </body>
</html>
