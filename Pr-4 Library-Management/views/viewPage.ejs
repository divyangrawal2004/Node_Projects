<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= editData.bookName %> - Book Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/viewPage.css">
</head>
<body>
  <%- include('sidebar') %>
<div class="view-container">
  <div class="book-card">
    <!-- Book Cover -->
    <div class="book-cover">
      <img src="/uploads/<%= editData.profile %>" alt="<%= editData.bookName %>">
    </div>

    <!-- Book Details -->
    <div class="book-details">
      <h2><i class="bi bi-book"></i> <%= editData.bookName %></h2>
      <p><i class="bi bi-person"></i> <strong>Author:</strong> <%= editData.name %></p>
      <p><i class="bi bi-upc-scan"></i> <strong>ISBN:</strong> <%= editData.isbn %></p>
      <p><i class="bi bi-tags"></i> <strong>Genre:</strong> <%= editData.gender %></p>
      <p><i class="bi bi-123"></i> <strong>Total Copies:</strong> <%= editData.totalBook %></p>
      <p><i class="bi bi-text-paragraph"></i> <strong>Description:</strong></p>
      <div class="desc-box"><%= editData.description %></div>

      <!-- Buttons -->
      <div class="action-buttons">
        <a href="/edit/<%= editData.id %>" class="btn btn-warning">
          <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="/deleteTodo/<%= editData.id %>" class="btn btn-danger">
          <i class="bi bi-trash"></i> Delete
        </a>
        <a href="/show" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Back to Catalog
        </a>
      </div>
    </div>
  </div>
</div>

</body>
</html>
