<%- include('../header') %>

<div class="page-wrapper"
    style="background-color: #f8f9fa; min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 40px 15px;">
    
    <div class="card shadow-lg border-0 overflow-hidden" style="max-width: 600px; width: 100%; border-radius: 16px;">
        
        <!-- Blog Image -->
        <div class="position-relative">
            <img src="<%= blog.image %>" alt="<%= blog.title %>" 
                class="img-fluid w-100"
                style="max-height: 280px; object-fit: cover; border-top-left-radius: 16px; border-top-right-radius: 16px; filter: brightness(95%);">
            
            <!-- Category Badge -->
            <span class="badge position-absolute top-0 start-0 m-3 px-3 py-2 rounded-pill shadow"
                style="background: linear-gradient(135deg, #ff7eb3, #ff758c); font-size: 0.8rem; color: #fff;">
                <i class="bi bi-tags"></i> <%= blog.category %>
            </span>
        </div>

        <!-- Blog Content -->
        <div class="card-body p-4">
            <!-- Title -->
            <h4 class="fw-bold mb-3" style="color: #222;">
                <i class="bi bi-journal-text text-primary"></i> <%= blog.title %>
            </h4>

            <!-- Description -->
            <p style="font-size: 1rem; line-height: 1.6; color:#555; text-align: justify;">
                <%= blog.description %>
            </p>

            <!-- Back Button -->
            <div class="text-center mt-4">
                <a href="/blog/viewBlog" class="btn px-4 py-2 rounded-pill fw-semibold shadow-sm"
                    style="background: linear-gradient(135deg, #43cea2, #185a9d); color: #fff; transition: all 0.3s;">
                    â¬… Back to Blogs
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
